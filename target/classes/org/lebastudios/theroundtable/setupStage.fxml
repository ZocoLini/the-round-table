<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import org.lebastudios.theroundtable.ui.IconButton?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.lebastudios.theroundtable.SetupStageController"
            prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>
    
    <center>
        <BorderPane fx:id="mainPane" >
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>

            <center>
                <VBox alignment="CENTER" spacing="10">
                    <IconButton iconSize="128" iconName="the-round-table-logo.png"/>
                    <Label textAlignment="CENTER" wrapText="true" text="%phrase.setupwelcome"/>
                </VBox>
            </center>
            
        </BorderPane>
    </center>
    
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button prefWidth="100" fx:id="backButton" onAction="#backButtonAction" text="%word.pervious" />
            <Button prefWidth="100" fx:id="nextButton" onAction="#nextButtonAction" text="%word.next" />
        </HBox>
    </bottom>
</BorderPane>
