<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<HBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="org.lebastudios.theroundtable.plugins.PluginsStageController"
      prefHeight="350"  minWidth="450" maxWidth="Infinity">
    <TabPane HBox.hgrow="ALWAYS" fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
        <padding>
            <Insets top="15" right="15" bottom="15" left="15"/>
        </padding>
        <Tab text="Installed">
            <ScrollPane pannable="true">
                <padding>
                    <Insets top="15"/>
                </padding>
                <VBox spacing="15" fx:id="installedPlugins">
                    <padding>
                        <Insets top="15"/>
                    </padding>
                </VBox>
            </ScrollPane>
        </Tab>
        <Tab fx:id="availablePluginsTab" text="Search">
            <ScrollPane pannable="true">
                <padding>
                    <Insets top="15"/>
                </padding>
                <VBox spacing="15" fx:id="availablePlugins">
                    <padding>
                        <Insets top="15"/>
                    </padding>
                </VBox>
            </ScrollPane>
        </Tab>
    </TabPane>

    <BorderPane fx:id="pluginViewer"/>
</HBox>
