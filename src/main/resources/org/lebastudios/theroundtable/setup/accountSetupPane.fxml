<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" prefHeight="400.0" prefWidth="600.0" spacing="15" xmlns="http://javafx.com/javafx/17.0.12" 
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.lebastudios.theroundtable.setup.AccountSetupPaneController">
    
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label maxWidth="Infinity" text="%word.name" HBox.hgrow="ALWAYS" />
        <TextField fx:id="usernameField" />
    </HBox>
    
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label maxWidth="Infinity" text="%word.password" HBox.hgrow="ALWAYS" />
        <PasswordField fx:id="passwordField" />
    </HBox>
    
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label maxWidth="Infinity" text="%phrase.confirmpassword" HBox.hgrow="ALWAYS" />
        <PasswordField fx:id="confirmPasswordField" />
    </HBox>
    
    <Label fx:id="errorLabel" style="-fx-text-fill: red; -fx-font-style: italic" wrapText="true" />
</VBox>
